---
// src/layouts/Layout.astro
import '../styles/global.css';

export interface Props {
    title: string;
    description?: string;
}

const { title, description = "Join us for The Sam Lower Memorial Golf Tournament honoring Sam Lower and supporting multiple myeloma research in the Indianapolis area." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { 
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; 
            line-height: 1.6;
        }
        /* Ensure SVG icons are properly sized and don't grow */
        svg {
            flex-shrink: 0;
            max-width: 100%;
            height: auto;
        }
        /* Prevent SVG icons from inheriting unexpected sizes */
        .icon-container svg {
            width: 1.5rem;
            height: 1.5rem;
        }
        /* Smooth scrolling for anchor links */
        html {
            scroll-behavior: smooth;
        }
    </style>
</head>
<body class="bg-gray-50">
    <slot />
</body>
</html>
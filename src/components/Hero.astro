---
// src/components/Hero.astro
import HeroImage from './HeroImage.astro';
---

<section class="relative bg-gradient-to-br from-green-50 to-blue-50 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div>
                <div class="mb-6">
                    <span class="inline-block px-3 py-1 text-sm font-medium bg-green-100 text-green-800 rounded-full">
                        Coming Soon
                    </span>
                </div>
                <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6 leading-tight">
                    Honoring <span class="text-green-600">Sam Lower</span><br>
                    Through Golf & Community
                </h1>
                <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                    Join us for The Sam Lower Memorial Golf Tournament celebrating Sam's life while raising funds for multiple myeloma research and awareness in the Indianapolis area.
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="#signup" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-green-600 hover:bg-green-700 transition-colors">
                        Get Tournament Updates
                    </a>
                    <a href="#about" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                        Learn More
                    </a>
                </div>
            </div>
            <div class="relative">
                <HeroImage 
                    images={[
                        '/images/sam-chambers.png',
                        '/images/sam-caddy.png',
                        '/images/sam-og.png',
                        '/images/sam-bearslide.png',
                        '/images/sam-caddy2.png'
                    ]}
                    altTexts={[
                        'Sam at Chambers Bay with his sons.',
                        'Caddying for his granddaughter.',
                        'Sam Lower loved golf a long time.',
                        'After a great round at Bear Slide.',
                        'Caddying with his grandson patiently waiting.',
                    ]}
                    displayMode="contain"
                    rotationInterval={5}
                />
                
                <!-- Decorative elements -->
                <div class="absolute -top-4 -right-4 w-24 h-24 bg-green-200 rounded-full opacity-50"></div>
                <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-blue-200 rounded-full opacity-30"></div>
            </div>
        </div>
    </div>
</section>